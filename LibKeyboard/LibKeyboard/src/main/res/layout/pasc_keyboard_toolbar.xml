<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pasc_keyboard_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/pasc_keyboard_toolbar_height"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/pasc_keyboard_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pasc_keyboard_toolbar_padding_left_right"
        android:paddingRight="@dimen/pasc_keyboard_toolbar_padding_left_right"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/pasc_keyboard_title_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/pasc_keyboard_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pasc_keyboard_toolbar_text_size"
            android:textColor="@color/pasc_keyborad_toolbar_text_color"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/pasc_keyboard_toolbar_item_margin" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pasc_keyboard_right_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/pasc_keyboard_toolbar_padding_left_right"
        android:paddingRight="@dimen/pasc_keyboard_toolbar_padding_left_right"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center">
        <TextView
            android:id="@+id/pasc_keyboard_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/pasc_keyboard_toolbar_text_size"
            android:textColor="@color/pasc_keyborad_toolbar_text_color" />

        <ImageView
            android:id="@+id/pasc_keyboard_right_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pasc_keyboard_toolbar_item_margin"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

</RelativeLayout>
